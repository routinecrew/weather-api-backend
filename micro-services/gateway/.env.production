# 애플리케이션 설정
NODE_ENV=production
PORT=3000
APP_NAME=weather-service
TZ=Asia/Seoul

# PostgreSQL 설정
POSTGRES_HOST=weather-postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strong-production-password
POSTGRES_DATABASE=weather_db
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
ALTER_TABLE=false

# Redis 설정
REDIS_HOST=weather-redis
REDIS_PORT=6379
REDIS_PASSWORD=strong-redis-production-password
REDIS_DB=0

# JWT 설정
ACCESS_JWT_SECRET=production-access-jwt-super-secret-key
ACCESS_JWT_EXPIRED_SEC=1800
REFRESH_JWT_SECRET=production-refresh-jwt-super-secret-key
REFRESH_JWT_EXPIRED_SEC=259200
SIGN_UP_JWT_SECRET=production-signup-jwt-super-secret-key
SIGN_UP_JWT_EXPIRED_SEC=1800

# 암호화 설정
AES_KEY=production-aes-key-32-characters-long
SALT_ROUNDS=12